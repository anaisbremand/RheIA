<main class="d-flex">

  <%= render "layouts/dashboard" %>

  <section class="container">

    <h1 class='text-center'>Mes brouillons</h1>
    <div class="row justify-content-center">
      <% @drafts.each_with_index do |post, index| %>
        <div class="col-12 col-lg-4 d-flex justify-content-center">
          <%= render "insta_draft", post: post, index: index %>
        </div>
      <% end %>

    </div>

    <div class="text-center mx-5">
      <%= link_to "Générer un autre post", new_post_path, class:"button-valider-historique my-3 px-3" %>
      <%= link_to "Voir mon historique", posts_historique_path, class:"button-annexe-historique" %>
    </div>
  </section>


</main>
