<div class="card carousel-card m-3">

  <div class="topbar">
    <div>
      <%= image_tag "138893298.jpg", class:"icon" %>
      <b><%= current_user.instagram %></b>
    </div>
    <%= render "layouts/instagram/threepoints" %>
  </div>

    <content select="img">

      <div id="carouselExampleIndicators-<%= index %>"  class="carousel slide custom-annexe">

        <div class="carousel-indicators">

          <% if post.images.length > 1 %>
            <% post.images.each_with_index do |photo, index| %>
              <div data-bs-target="#carouselExampleIndicators-<%=index%>" data-bs-slide-to="<%=index%>" class="<%= index == 0 ? "active" : "" %> rounded-circle card-indicator">
              </div>
            <% end %>
          <% end %>

        </div>

        <div class="carousel-inner">

          <% post.images.each_with_index do |photo, index| %>
              <div class="carousel-item <%= index == 0 ? "active" : "" %>">
                <img src="<%=photo%>" alt="" class="crop custom-annexe">
              </div>
          <% end %>

        </div>

        <%= render "layouts/instagram/btns_carousel" if post.images.length > 1 %>

      </div>

    </content>

  <%= render "layouts/instagram/interactionsbtns" %>

  <div class="textcontent" data-controller="toggledescription">
    <b> <%= current_user.instagram %> </b>

    <span style="display:inline;" data-action="click->toggledescription#fireplus">
      <span data-toggledescription-target="description">
        <% if post.description.size > 64 %>
          <%= post.description[0..64] %><span style="color: grey;">...plus</span>
        <% else %>
          <%= post.description %>
        <% end %>
      </span>
      <span data-toggledescription-target="plus" class="d-none"><%= post.description %></span>
    </span>

  </div>
<div class="d-flex justify-content-center mt-auto my-1 align-items-end">
  <%= link_to "Voir sur Instagram", "http://instagram.com", class: "button-instagram text-center", target: "_blank" %>
</div>

</div>
