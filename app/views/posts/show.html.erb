<div class="breadcrumb infos-card">
    <ul>
        <li class="breadcrumb_inactive">G√©n√©rateur de post &#10148</li>
        <li class="breadcrumb_active">Modification &#10148</li>
        <li class="breadcrumb_inactive">Publication</li>
    </ul>
</div>


<div id="container">
  <div class="container-show d-flex flex-nowrap">
    <div class="container-prompt-img-description prompt w-50 px-3 py-3">
      <h4 class="text-center py-3">
        Votre post
      </h4>

      <div class="update-img-text infos-card my-5 px-5 pt-3">
        <div class="form text-center py-3">

          <div class="form py-3 d-flex flex-wrap justify-content-center" data-controller="show-imgs">

            <% @post.photos.each do |photo| %>
              <div style="flex-basis:33%" class="p-1">
                <%= cl_image_tag photo.key , class:"crop"%>
              </div>
            <% end %>

            <% @post.images.each do |photo| %>
              <div style="flex-basis:33%" class="p-1">
                <img data-show-imgs-target="image" data-src="<%= photo %>" alt="" class="crop">
              </div>
            <% end %>

          </div>


          <div class="p-3" data-controller="toggle">

            <div class="post-description-modifiable">
              <p><%= @post.description %></p>
            </div>

            <div class="d-flex justify-content-center mt-3 flex-wrap">

              <button style="flex-basis:42%" data-action="click->toggle#fireArea" data-toggle-target="modif" class="button-annexe m-2">
                Modifier ma description ‚úèÔ∏è
              </button>
                <%= form_with url: regenerate_path(@post), method: "PATCH", html: { autocomplete: 'off', style: "flex-basis:40%" } do |f| %>
                  <%= f.submit "Recr√©er une description ü§î", class:"button-annexe m-2", data: { toggle_target: "regen" } %>
                <% end %>

              <div style="flex-basis:100%" data-toggle-target="textarea" class="d-none">
                <%= simple_form_for @post  do |f| %>
                  <%= f.input :description, label: false, placeholder: @post.description, input_html: { id:"modif-description" }%>
                  <div class="d-flex justify-content-around">
                    <button data-action="click->toggle#cancelArea" class="button-cancel" style= "flex-basis:40%">
                      Annuler ‚ùå
                    </button>
                    <%= f.submit "Modifier ‚úîÔ∏è", class: "button-annexe", style: "flex-basis:40%" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>


    <div class="container-instagram w-50 p-3">



    <h4 class="text-center py-3">
      Vue Instagram
    </h4>


    <div class="d-flex align-items-center flex-column py-3">
      <%= render "insta_show", post: @post %>
      <div class="container-buttons d-flex justify-content-evenly flex-wrap py-3">
        <%= render "show_btns", post: @post %>
      </div>
    </div>

  </div>

</div>

</div>
