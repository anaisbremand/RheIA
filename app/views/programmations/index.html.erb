    <%= @programmations %>
  </div>

<div class="d-flex">

   <%= render "layouts/dashboard" %>

  <div class="container infos-card rounded-4 p-5 d-flex flex-column align-items-center">
    <h1>Mes posts programm√©s</h1>
    <div class = "d-flex f-row">
      <div class="grid">
        <% @programmations.each_with_index do |post, index| %>
          <div class="card carousel-card m-4">
            <div class="topbar">

              <div>
                <%= image_tag "138893298.jpg", class:"icon" %>
                <b><%= current_user.instagram %></b>
              </div>

              <%= render "layouts/instagram/threepoints" %>

            </div>
        <%= link_to post_path(post) do %>
            <content select="img" style="max-width:max-content;">
              <div id="carouselExampleIndicators-<%= index %>"  class="carousel slide custom-annexe">
                <div class="carousel-indicators">
                  <% if @programmation.post.photos.length > 1 %>
                    <% @programmation.post.photos.each_with_index do |photo, index| %>
                      <div data-bs-target="#carouselExampleIndicators-<%=index%>" data-bs-slide-to="<%=index%>" class="<%= index == 0 ? "active" : "" %> rounded-circle card-indicator"></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="carousel-inner">
                  <% @programmation.post.photos.each_with_index do |photo, index| %>
                    <div class="carousel-item <%= index == 0 ? "active" : "" %>">
                      <%= cl_image_tag photo.key,  class:"crop custom-annexe"%>
                    </div>
                  <% end %>
                </div>
                <% if @programmation.post.photos.length > 1 %>
                  <%= render "layouts/instagram/btns_carousel" %>
                <% end %>
              </div>
            </content>
        <% end %>

        <%= render "layouts/instagram/interactionsbtns" %>

              <div class="textcontent ">
                <b> <%= current_user.instagram %> </b>
                <span style="display:inline;">
                  <%= post.description %>... plus
                </span>
              </div>
            <div class="text-center m-3 button-annexe milieu">
              <%= link_to "Supprimer üóëÔ∏è", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Etes-vous s√ªr de vouloir supprimer ce post ?"}%>
            </div>
          </div>
          <% end %>
      </div>
    </div>
    <div class="text-center column mx-5">
      <%= link_to "G√©n√©rer un autre post", new_post_path, class:"button-valider my-3 px-3" %>
      <%= link_to "Voir mon historique", posts_historique_path, class:"button-annexe" %>
    </div>
  </div>
</div>
