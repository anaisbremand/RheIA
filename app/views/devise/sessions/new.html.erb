<div class='container d-flex justify-content-center'>
  <div class="p-5 col-md-8 col-12">
    <h2 class="my-3 py-3 text-center">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions form-text">
        <%= f.button :submit, "Se connecter", class:"btn" %>
      </div>
    <% end %>

    <div class='my-3'>
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
