<div class="body-form my-5 ">
  <div class="formulaire infos-card rounded-4 p-5 w-75">
    <div class="form-text">
      <h2 class="enonce my-3 py-3">Connexion</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions form-text">
          <%= f.button :submit, "Se connecter", class:"button-valider" %>
        </div>
        <% end %>



    <%= render "devise/shared/links" %>

  </div>
</div>
